{
  "name": "@nmshd/typescript-rest-swagger",
  "version": "1.4.0",
  "description": "Generate Swagger files from a typescript-rest project",
  "keywords": [
    "typescript",
    "typescript-rest",
    "swagger",
    "open api",
    "rest",
    "microservice",
    "codegen",
    "generation"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "start": "tsc -w",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist",
    "swagger-gen": "node ./dist/cli.js -c ./test/data/swagger.js",
    "pretest": "cross-env NODE_ENV=test npm run build",
    "test": "cross-env NODE_ENV=test jest --config ./test/jest.config.js",
    "test:coverage": "cross-env NODE_ENV=test jest --config ./test/jest.config.js --coverage --coverageReporters=text-lcov",
    "tsc": "tsc"
  },
  "author": "Thiago da Rosa de Bustamante <trbustamante@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@nmshd/typescript-rest": "^3.2.0",
    "@types/node": "^24.7.2",
    "argparse": "^2.0.1",
    "debug": "^4.4.3",
    "fs-extra-promise": "^1.0.1",
    "glob": "^11.0.3",
    "lodash": "^4.17.21",
    "merge": "^2.1.1",
    "minimatch": "^10.0.3",
    "mkdirp": "^3.0.1",
    "openapi-types": "^12.1.3",
    "path": "^0.12.7",
    "swagger2openapi": "^7.0.8",
    "ts-morph": "^27.0.2",
    "typescript": "^5.9.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/argparse": "^2.0.17",
    "@types/debug": "^4.1.12",
    "@types/fs-extra-promise": "^1.0.13",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/minimatch": "^6.0.0",
    "@types/mkdirp": "^2.0.0",
    "@types/yamljs": "^0.2.34",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "jsonata": "^2.1.0",
    "rimraf": "^6.0.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thiagobustamante/typescript-rest-swagger.git"
  },
  "bin": {
    "swaggerGen": "dist/cli.js"
  },
  "directories": {
    "lib": "dist",
    "doc": "doc"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "engineStrict": true
}
